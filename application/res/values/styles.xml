<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="FullParentLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

	<style name="FormLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">@dimen/padding_form_layout</item>
	</style>

	<style name="FormLayoutFirstItem">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="FormLayoutNotFirstItem" parent="style/FormLayoutFirstItem">
		<item name="android:layout_marginTop">@dimen/margin_top_form_item</item>
	</style>

</resources>