<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Default -->
	<item android:drawable="@color/background_action_bar" android:state_focused="false"
				android:state_pressed="false" android:state_selected="false" />

	<!-- Focused -->
	<item android:drawable="@drawable/background_action_bar_item_focused" android:state_focused="true"
				android:state_pressed="false" android:state_selected="false" />

	<!-- Pressed -->
	<item android:drawable="@drawable/background_action_bar_item_pressed"
				android:state_pressed="true" />

</selector>